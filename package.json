{
  "name": "nextjs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "postinstall": "electron-rebuild -f -w better-sqlite3 || echo 'Rebuild failed - this is OK if you are not using Electron. Run npm run rebuild:electron manually if needed.'",
